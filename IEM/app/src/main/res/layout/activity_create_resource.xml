<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_resource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deep_Event.Create_Resource">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/backround">

            <ImageButton
                android:id="@+id/backButton"
                android:contentDescription="Back to home"
                android:src="@drawable/back_ic"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm tài nguyên"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/ID_Resource_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_border"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:enabled="false"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/generate_ID_Button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/swap_ic"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên tài nguyên:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/name_Resource_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_border"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:maxLines="2"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại tài nguyên:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_margin="10dp"/>
            <Spinner
                android:id="@+id/type_resource_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/amount_resource_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_border"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:maxLines="1"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/create_resource_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonColor"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Thêm tài nguyên"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>