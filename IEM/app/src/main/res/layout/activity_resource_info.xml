<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resource_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deep_Event.Resource_Info">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/backround">

            <ImageButton
                android:id="@+id/backButton"
                android:contentDescription="Back to home"
                android:src="@drawable/back_ic"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin tài nguyên"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/nameResource_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên tài nguyên"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/typeResource_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại tài nguyên"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/amount_resource_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_border"/>

        </LinearLayout>

        <Button
            android:id="@+id/save_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:backgroundTint="@color/buttonColor"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>