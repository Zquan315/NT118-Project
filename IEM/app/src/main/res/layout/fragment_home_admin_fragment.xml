<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.home_admin_fragment">

    <!-- TODO: Update blank fragment layout -->
    <!--Bao gồm các nút: dự án, phòng ban,
    nhân viên, tài nguyên, tài chính-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TextView -->
        <TextView
            android:id="@+id/optionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tùy chọn"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:padding="16dp" />

        <!-- LinearLayout chứa 5 nút -->
        <LinearLayout
            android:id="@+id/LinearLayout"
            android:orientation="vertical"
            android:background="@color/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- LinearLayout chứa 3 nút trên -->
            <LinearLayout
                android:id="@+id/Linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <!--nút phòng ban-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/departImageButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/networking_ic"
                        android:contentDescription="Nút phòng ban"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/departImageButtonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phòng ban"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!--nút nhân sự-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/employeeImageButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emp_ic"
                        android:contentDescription="Nút nhân sự"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/employeeImageButtonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhân sự"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!--nút dự án-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/planImageButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/plan_ic"
                        android:contentDescription="Nút dự án"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/planImageButtonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dự án"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!--chứa 2 nút dưới-->
            <LinearLayout
                android:id="@+id/Linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <!--nút tài nguyên-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/resImageButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/res_ic"
                        android:contentDescription="Nút tài nguyên"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/resImageButtonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài nguyên"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!--nút tài chính-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_weight="0.2"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/financeImageButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/finance_ic"
                        android:contentDescription="Nút tài chính"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/financeImageButtonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài chính"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="2sp"
            android:background="@color/black"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/backroundLayout"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alertTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Các thông báo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:padding="16dp" />

            <ImageButton
                android:id="@+id/addAlertImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/add_ic"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Nút thêm thông báo"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/clear_all_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xóa tất cả"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="0.5sp"
                android:background="@color/black"/>
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            tools:listitem="@layout/list_alert_demo"
            android:padding="10dp" />

    </LinearLayout>
</FrameLayout>
