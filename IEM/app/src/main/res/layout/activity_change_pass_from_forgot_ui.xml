<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changePass_fromForgot"
    android:background="@drawable/backround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logomini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_mini"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-198dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/changePassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐỔI MẬT KHẨU"
        android:layout_marginTop="330dp"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@id/changePassText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/confirmPassEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Xác nhận mật khẩu"
        android:textColor="@color/black"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@id/passEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/changeBtn"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Thay đổi"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassEditText" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Quay lại"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>