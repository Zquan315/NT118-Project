<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edittext_border"
        android:padding="5dp"
        android:backgroundTint="@color/imageButton"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDepartment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/departments" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/Name_of_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="Tên Phòng ban"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Mã phòng: "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/header_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Mã trưởng phòng: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amount_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Số lượng nhân viên: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amount_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Số dự án: "
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
