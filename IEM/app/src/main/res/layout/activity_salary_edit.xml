<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salary_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deep_Event.Salary_Edit">

    <LinearLayout
        android:orientation="vertical"
        android:background = "@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update with your layout -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/backround">

            <ImageButton
                android:id="@+id/backButton"
                android:contentDescription="Back to home"
                android:src="@drawable/back_ic"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin lương"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:textColor="@color/buttonColor"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/id_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="@color/blue"
            android:textStyle="bold"/>
        <!--luong co ban-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lương cơ bản:"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/basicSalary_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <!--ngay nghi-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số ngày nghỉ:"
                android:layout_weight="0.04"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/leaveDay_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <!--Thuong them-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thưởng (%):"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/perk_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:text="0"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <!--Luong tông-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng lương:"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/sum_of_salary_EditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/calc_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tính"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/buttonColor"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/save_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/buttonColor"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/reset_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonColor"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>